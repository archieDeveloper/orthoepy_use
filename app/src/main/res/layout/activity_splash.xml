<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shahbazly_dev.orthoepy_use.Splash"
    android:background="@color/color_midnight_blue">

    <info.hoang8f.widget.FButton
        android:text="Начать тренировку"
        android:layout_height="wrap_content"
        android:id="@+id/btn_start_train"
        fbutton:buttonColor="@color/color_peter_river"
        fbutton:shadowColor="@color/color_belize_hole"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:textSize="15sp"
        android:textColor="@color/color_clouds"
        android:layout_above="@+id/btn_dictionary"
        android:layout_alignLeft="@+id/btn_dictionary"
        android:layout_alignStart="@+id/btn_dictionary"
        android:layout_marginBottom="15dp"
        android:layout_width="210sp" />

    <info.hoang8f.widget.FButton
        android:text="Оценить приложение"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rate_app"
        fbutton:buttonColor="@color/color_emerald"
        fbutton:shadowColor="@color/color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:textSize="15sp"
        android:textColor="@color/color_clouds"
        android:layout_width="210sp"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_dictionary"
        android:layout_alignStart="@+id/btn_dictionary" />

    <info.hoang8f.widget.FButton
        android:text="Орфоэпический словарь"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dictionary"
        fbutton:buttonColor="@color/color_turquoise"
        fbutton:shadowColor="@color/color_green_sea"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:textSize="15sp"
        android:textColor="@color/color_clouds"
        android:layout_width="210sp"
        android:layout_above="@+id/btn_rate_app"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fbutton:srcCompat="@drawable/unlocked"
        android:layout_marginBottom="49dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/btn_start_train"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
